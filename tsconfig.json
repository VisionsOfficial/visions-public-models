{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2015",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./lib",
		"baseUrl": ".",
		"lib": ["ES2021.String", "ES7", "DOM"],
		"resolveJsonModule": true
	},
	"include": ["src"],
	"exlude": ["node_modules"]
}
